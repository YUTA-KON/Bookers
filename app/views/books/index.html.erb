<h1><strong>Books</strong></h1>
<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
    </tr>
    <% @books.each do |b| %>
        <tr>
            <td><%= b.title %></td>
            <td><%= b.body %></td>
            <td>
            <%= link_to "Show", book_path(b) %>
            </td>
            <td><%= link_to "Edit", edit_book_path(b) %></td>
            <td><%= link_to "Destroy", book_path(b), method: :delete %></td>
        </tr>
    <% end %>
</table>

<h1>New Book</h1>
<% if @newbook.errors.any? %>
    <h2><%= @newbook.errors.count %>件のerrorが発生しました</h2>
    <ul>
        <%= @newbook.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model:@newbook,local:true do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>